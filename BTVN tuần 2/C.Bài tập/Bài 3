#include <bits/stdc++.h>
using namespace std;
void renderTriangle(int n){
    for (int i=0; i<n; i++){
        for (int j=n-i-1; j>0; j--){
            cout << " ";
        }
        for (int y=1; y<=2*i+1; y++){
            cout << "*";
        }
        cout << endl;
    }
}
int main(){
    int n; cin >> n;
    renderTriangle(n);
}
