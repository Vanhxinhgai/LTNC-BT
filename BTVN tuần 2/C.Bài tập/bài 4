#include <bits/stdc++.h>
using namespace std;
void renderTriangle(int n){
    for (int i=0; i<n; i++){
        for (int j=0; j<i; j++){
            cout << " ";
        }
        for (int y=2*(n-i-1)+1; y>0; y--){
            cout << "*";
        }
        cout << endl;
    }
}
int main(){
    int n; cin >> n;
    renderTriangle(n);
}
